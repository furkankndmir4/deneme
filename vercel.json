{
  "version": 2,
  "projects": [
    {
      "name": "frontend",
      "root": "frontend",
      "builds": [
        {
          "src": "index.html",
          "use": "@vercel/static-build",
          "config": { "distDir": "dist" }
        }
      ]
    },
    {
      "name": "backend",
      "root": "backend",
      "builds": [
        {
          "src": "server.js",
          "use": "@vercel/node"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}
